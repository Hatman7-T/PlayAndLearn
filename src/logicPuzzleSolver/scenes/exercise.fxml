<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logicPuzzleSolver.controllers.ExerciseController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox maxHeight="440.0" maxWidth="300.0" minHeight="400.0" minWidth="300.0" prefHeight="440.0"
                      prefWidth="300.0">
                    <children>
                        <Label fx:id="title" minWidth="400.0" text="Label"/>
                        <Separator prefWidth="200.0"/>
                        <Label fx:id="desc" alignment="TOP_LEFT" maxWidth="300.0" text="Label" wrapText="true"/>
                        <Label fx:id="example" alignment="TOP_LEFT" layoutX="10.0" layoutY="31.0" maxWidth="300.0"
                               text="Label" wrapText="true"/>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <TextArea fx:id="code" minHeight="400.0" minWidth="400.0"/>
                        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onRunClicked" text="Run"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
